#!/usr/bin/env groovy

pipeline {
    agent {
    kubernetes {
      	cloud 'kubernetes'
      	label 'todo'
      	defaultContainer 'jnlp'
      	yamlFile 'pod-deploy.yaml'
      }
    }

    stages {
        stage("deploy") {
            steps {
                container('kubeclt') {
			            sh """
			                kubectl apply -f manifests/ -n todo
			            """
                     }
                }
            }
        }
    }
